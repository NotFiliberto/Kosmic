{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@app/*": ["./app/*"],
            "@components/*": ["./components/*"],
            "@assets/*": ["./assets/*"],
            "@lib/*": ["./lib/*"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "**/*.json"
    ]
}
